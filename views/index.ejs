<%- include('./partials/head', 
  { 
    // HEAD data
    title: 'Home',
    description: 'Welcome to the home page',
    image: ''
  }) 
%>
<div class="container">
  <h1>
    Playlists
  </h1>
  <div class="playlists">
    <% playlists.forEach(item => { %>
      <a href="/playlist/<%= item.slug %>" class="playlist">
        <img src="https://fdnd-agency.directus.app/assets/<%= item.image %>" alt="<%= item.title %>">
        <h2><%= item.title %></h2>
      </a>

      <%- include('./partials/buttons', { buttons: 
        [
          {
              link: "/playlist/" + item.slug,
              style: {
                  type: "playlist"
              },
              text: "Open link",
              icon: true,
          }
        ]
       }) %>
    <% }) %>
  </div>

</div>


<%- include('./partials/foot') %>
